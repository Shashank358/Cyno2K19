                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="16dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="26dp"
                        android:paddingTop="8dp"
                        android:paddingRight="26dp"
                        android:text="Estate War"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:textStyle="bold|italic" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:src="@drawable/line" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="4dp"
                        android:paddingLeft="26dp"
                        android:paddingTop="8dp"
                        android:paddingRight="26dp"
                        android:paddingBottom="26dp"
                        android:text="\tThere will be two workshops one for investor and second for developer. Workshop timing will be 1 hour only. In workshop we will give detailed info about event as well as clear all doubts of participants which is main purpose of workshop. "
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
