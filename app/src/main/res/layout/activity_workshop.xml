                        android:textColor="#000000"
                        android:textSize="25dp"
                        android:textStyle="bold|italic" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:src="@drawable/line" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoLink="all"
                        android:clickable="true"
                        android:lineSpacingExtra="4dp"
                        android:paddingLeft="26dp"
                        android:paddingTop="8dp"
                        android:paddingRight="26dp"
                        android:paddingBottom="26dp"
                        android:text="\tA small workshop will be arranged for the participants about Game Development. The participants will get the knowledge about how to develop the game using software tool. \nPoster link: \nshttps://drive.google.com/file/d/1-2JvjF2vsRQ2D7zdg-zr8kqk2CA6-dAA/view?usp=drivesdk \nVideo link : \nhttps://drive.google.com/file/d/1KHGZqQbJxtOLMxgGAFXKt0Oq5UimTiOk/view?usp=drivesdk"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="16dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="26dp"
                        android:paddingTop="8dp"
                        android:paddingRight="26dp"
                        android:text="Radiance"
                        android:textColor="#000000"
                        android:textSize="25dp"
                        android:textStyle="bold|italic" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:src="@drawable/line" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="4dp"
                        android:paddingLeft="26dp"
                        android:paddingTop="8dp"
                        android:paddingRight="26dp"
                        android:paddingBottom="26dp"
                        android:text="\t A workshop will be held where we will be teaching how to design a working robo in less than 100 Rs."
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="16dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="26dp"
                        android:paddingTop="8dp"
